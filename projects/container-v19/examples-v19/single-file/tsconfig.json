{
  "extends": "./tsconfig.isomorphic.json",
  "compilerOptions": {
    "strictNullChecks": false,
    "rootDir": "./",
    "paths": {
      "@lib": [
        "./src/lib"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "single-file/src": [
        "./src/lib"
      ],
      "single-file/src/*": [
        "./src/lib/*"
      ]
    },
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "environments/**/*.ts",
    "env.ts"
  ],
  "exclude": [
    "src/assets"
  ]
}
